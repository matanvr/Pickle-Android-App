<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#fff" >

    <TextView
        android:id="@+id/commentAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/commentPost"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        
         android:textSize="16sp"
        android:text="matanvr" />

    <TextView
        android:id="@+id/commentPost"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/commentAuthor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
         android:textSize="18sp"
        android:text="This is defr." />

  

    <TextView
        android:id="@+id/commentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/commentPost"
        android:layout_below="@+id/commentPost"
        android:text="16 minutes ago"
        android:layout_marginTop="1dp"
       
        android:textSize="13sp" />

</RelativeLayout>

