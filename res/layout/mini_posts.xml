<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="163dp"
    android:layout_gravity="fill_horizontal"
    android:gravity="center"

    android:orientation="horizontal" >
    
        <ImageView
        android:id="@+id/this_pic_mini"
        android:layout_width="85dp"
        android:layout_height="145dp"
        android:layout_below="@+id/this_mini_caption"
        android:layout_toLeftOf="@+id/that_pic_mini"
        android:src="@color/counter_text_color" />
        <ImageView
        android:id="@+id/that_pic_mini"
        android:layout_width="85dp"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@color/light_purple_button" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/this_votes_min"
        android:layout_toLeftOf="@+id/that_pic_mini"
        android:src="@drawable/ic_notification_count_bg_2" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/this_votes_min"
        android:layout_toRightOf="@+id/this_pic_mini"
        android:src="@drawable/ic_notification_count_bg_2" />
    <TextView
        android:id="@+id/this_votes_min"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="51%"
        
        android:textSize="12sp" />

    <TextView
        android:id="@+id/that_votes_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/this_votes_min"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/this_pic_mini"
        android:gravity="center"
        android:text="49%"
        
        android:textSize="12sp" />

    <TextView
        android:id="@+id/that_mini_caption"
        android:layout_width="85dp"
        android:layout_height="18dp"
        android:layout_above="@+id/that_pic_mini"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/question_mini_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#5f000000"
        android:gravity="center"
        android:text="Caption"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/this_mini_caption"
        android:layout_width="85dp"
        android:layout_height="18dp"
        android:layout_above="@+id/that_pic_mini"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="12sp" />

</RelativeLayout>