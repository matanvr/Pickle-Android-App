<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:circular="http://schemas.android.com/apk/res/com.myteam.thisorthat"
    android:layout_height="wrap_content"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rounded_corner" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#e1d2f3" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#F1F3F7" >

                    <View
                        android:id="@+id/buttonDivider"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:background="#CBCDD3" />

                    <TextView
                        android:id="@+id/thisLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="0dp"
                        android:layout_toLeftOf="@id/buttonDivider"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="THIS"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/thatLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/buttonDivider"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="THAT"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_toRightOf="@+id/thisLabel"
                        android:background="@drawable/button_custom"
                        android:visibility="invisible" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="wrap_content"
                        android:layout_height="4dp"
                        android:layout_alignBottom="@+id/buttonDivider"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@+id/thatLabel"
                        android:background="@drawable/button_custom"
                        android:visibility="invisible" />
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:id="@+id/relativelayout"
                        android:layout_width="180dp"
                        android:layout_height="320dp"
                        android:alpha="1" >
     <ProgressBar
                            android:id="@+id/this_progressBar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />
                        <ImageView
                            android:id="@+id/ThisPicture"
                            android:layout_width="180dp"
                            android:layout_height="320dp"
                            android:background="#00ffffff" />


                        <View
                            android:layout_width="180dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/voteheader" >
                        </View>

                        <RelativeLayout
                            android:id="@+id/thisCircle"
                            android:layout_width="40dp"
                            android:layout_height="78dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="30dp"
                            android:gravity="left" >

                            <TextView
                                android:id="@+id/thisVote"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="10dp"
                                android:gravity="center|left"
                                android:text="21"
                                android:visibility="invisible"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold" />
                                                    <com.lylc.widget.circularprogressbar.example.CircularProgressBar
                            android:id="@+id/circlethisbar"
                            style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            
                           
                            android:layout_alignParentLeft="true" />
                            
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/FromLabelView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="User"
                            android:textColor="#fff"
                            android:textSize="19sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativelayout2"
                        android:layout_width="180dp"
                        android:layout_height="320dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true" >
<ProgressBar
                            android:id="@+id/that_progressBar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />
                        <ImageView
                            android:id="@+id/ThatPicture"
                            android:layout_width="180dp"
                            android:layout_height="320dp"
                            android:layout_alignParentRight="true"
                            android:background="#00ffffff" />

                        

                        <View
                            android:layout_width="180dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/voteheader" >
                        </View>

                        <RelativeLayout
                            android:id="@+id/thatCircle"
                            android:layout_width="40dp"
                            android:layout_height="80dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="30dp"
                            android:gravity="right" >

                            <TextView
                                android:id="@+id/that_Votes"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="10dp"
                                android:gravity="center|right"
                                android:text="21"
                                android:visibility="invisible"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <com.lylc.widget.circularprogressbar.example.CircularProgressBar
                                android:id="@+id/circlethatbar"
                                style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                                android:layout_width="60dip"
                                android:layout_height="60dip" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/optionsMenu"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="5dp" >

                            <ImageView
                                android:id="@+id/moreOptions"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/icon_ellipse" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/Question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="100dp"
                        android:background="#5f000000"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="26sp" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>